<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatusFragment">


    <Button
        android:id="@+id/btnStatus"
        android:layout_width="185dp"
        android:layout_height="88dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="106dp"
        android:layout_marginLeft="106dp"
        android:layout_marginEnd="118dp"
        android:layout_marginRight="118dp"
        android:layout_marginBottom="197dp"
        android:text="Change Status"
        app:backgroundTint="#900C3F" />

    <TextView
        android:id="@+id/statusTxt"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_above="@+id/btnStatus"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="92dp"
        android:layout_marginRight="92dp"
        android:layout_marginBottom="57dp"
        android:gravity="center"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/statusTxt2"
        android:layout_width="93dp"
        android:layout_height="46dp"
        android:layout_above="@+id/btnStatus"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginEnd="-32dp"
        android:layout_marginRight="-32dp"
        android:layout_marginBottom="51dp"
        android:layout_toStartOf="@+id/statusTxt"
        android:layout_toLeftOf="@+id/statusTxt"
        android:text="Status: "
        android:textColor="#000000"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/elevatorId"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/statusTxt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="109dp"
        android:layout_marginLeft="109dp"
        android:layout_marginEnd="131dp"
        android:layout_marginRight="131dp"
        android:layout_marginBottom="17dp"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="24sp" />

</RelativeLayout>